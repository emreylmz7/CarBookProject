@model ResutlReservationByIdDto

@{
    ViewData["Title"] = "Reservation";
    Layout = "~/Views/UILayout/OptionUI.cshtml";
}

<style>
    body {
        background: #eee;
    }

    .card {
        box-shadow: 0 20px 27px 0 rgb(0 0 0 / 5%);
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: 1rem;
    }

    .text-reset {
        --bs-text-opacity: 1;
        color: inherit !important;
    }

    a {
        color: #5465ff;
        text-decoration: none;
    }
</style>

<section class="ftco-section contact-section">
    <div class="container-fluid">

        <div class="container">
            <!-- Title -->
            <div class="d-flex justify-content-between align-items-center py-3">
                <h2 class="h5 mb-0"><a href="#" class="text-muted"></a> Reservation #@Model.ReservationId</h2>
            </div>

            <!-- Main content -->
            <div class="row">
                <div class="col-lg-8">
                    <!-- Details -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="mb-3 d-flex justify-content-between">
                                <div>
                                    <span class="me-3">#@Model.ReservationId</span>
                                    <span class="badge badge-primary">@Model.Status</span>
                                </div>
                                <div class="d-flex">
                                    <button class="btn btn-link p-0 me-3 d-none d-lg-block btn-icon-text"><i class="bi bi-download"></i> <span class="text">Reservation</span></button>
                                    <div class="dropdown">
                                        <button class="btn btn-link p-0 text-muted" type="button" data-bs-toggle="dropdown">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><a class="dropdown-item" href="#"><i class="bi bi-pencil"></i> Edit</a></li>
                                            <li><a class="dropdown-item" href="#"><i class="bi bi-printer"></i> Print</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <td>
                                            <div class="d-flex mb-2 ml-3">
                                     
                                                <div class="flex-lg-grow-1 ms-3">
                                                    <h5 class="small mb-0"><a href="#" class="text-reset">Pick-up Location : @Model.PickupLocation</a></h5>
                                                    <span class="small">Date: @Model.PreferredPickupDate.Date.ToString("dd MMMM")</span>
                                                </div>
                                            </div>
                                        </td>
                                 
                                        <td>Pick-Up</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="d-flex mb-2 ml-3">
                                
                                                <div class="flex-lg-grow-1 ms-3">
                                                    <h5 class="small mb-0"><a href="#" class="text-reset">Drop-off Location : @Model.DropOffLocation</a></h5>
                                                    <span class="small">Date: @Model.PreferredDropOffDate.Date.ToString("dd MMMM")</span>
                                                </div>
                                            </div>
                                        </td>
                                  

                                        <td>Drop-Off</td>
                                    </tr>
                                </tbody>
                                <tbody>
                                    <tr>
                                        <td>
                                            <div class="d-flex mb-2 ml-3">
                                                <div class="flex-lg-grow-1 ms-3">
                                                    <h5 class="small mb-0"><a href="#" class="text-reset">Car Model</a></h5>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="pr-5">@Model.CarName</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="d-flex mb-2 ml-3">
                                                <div class="flex-lg-grow-1 ms-3">
                                                    <h5 class="small mb-0"><a href="#" class="text-reset">Car Brand</a></h5>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="ml-5">@Model.CarBrand</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="d-flex mb-2 ml-3">
                                                <div class="flex-lg-grow-1 ms-3">
                                                    <h5 class="small mb-0"><a href="#" class="text-reset">Total Rental Day</a></h5>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@Model.TotalRentDay Day</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="d-flex mb-2 ml-3">
                                                <div class="flex-lg-grow-1 ms-3">
                                                    <h5 class="small mb-0"><a href="#" class="text-reset">TOTAL</a></h5>
                                                </div>
                                            </div>
                                        </td>
                                        <td>$@Model.TotalCost</td>
                                    </tr>
                                </tbody>
                
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <!-- Customer Notes -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <h3 class="h6">Additional Comment</h3>
                            <p>@Model.AdditionalComments</p>
                        </div>
                    </div>
                    <div class="card mb-4">
                        <!-- Shipping information -->
                        <div class="card-body">
                            <h3 class="h6">Shipping Information</h3>
                            <strong>FedEx</strong>
                            <span><a href="#" class="text-decoration-underline" target="_blank">FF1234567890</a> <i class="bi bi-box-arrow-up-right"></i> </span>
                            <hr>
                            <h3 class="h6">Address</h3>
                            <address>
                                <strong>John Doe</strong><br>
                                1355 Market St, Suite 900<br>
                                San Francisco, CA 94103<br>
                                <abbr title="Phone">P:</abbr> (123) 456-7890
                            </address>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Bootstrap JS ve jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

