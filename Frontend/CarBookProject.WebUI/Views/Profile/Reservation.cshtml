@model ResutlReservationByIdDto

@{
    ViewData["Title"] = "Reservation";
    Layout = "~/Views/UILayout/OptionUI.cshtml";
}

<style>
    body {
        background-color: #000;
        color: #69707a;
    }

    #reservation {
        background-color: #f2f6fc;
        color: #69707a;
        min-height: 800px;
    }

    #noReservation {
        background-color: #f2f6fc;
        color: #69707a;
        min-height: 800px;
    }

    .card {
        box-shadow: 0 20px 27px 0 rgb(0 0 0 / 5%);
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: 1rem;
    }

    .text-reset {
        --bs-text-opacity: 1;
        color: inherit !important;
    }

    .table {
        min-width:500px !important;
    }

    a {
        color: #5465ff;
        text-decoration: none;
    }
</style>

@if (Model != null)
{
    <section class="ftco-section contact-section">
        <div class="py-5" id="reservation">
            <div class="container-fluid">

                <div class="container">
                    <!-- Title -->
                    <div class="d-flex justify-content-between align-items-center py-3">
                        <h2 class="h5 mb-0"><a href="#" class="text-muted"></a> Reservation #@Model.ReservationId</h2>
                    </div>

                    <!-- Main content -->
                    <div class="row">
                        <div class="col-lg-8">
                            <!-- Details -->
                            <div class="card mb-4">
                                <div class="card-body">
                                    <div class="mb-3 d-flex justify-content-between">
                                        <div>
                                            <span class="me-3">#@Model.ReservationId</span>
                                            <span class="badge badge-primary">@Model.Status</span>
                                        </div>
                                        <div class="d-flex">
                                            <button class="btn btn-link p-0 me-3 d-none d-lg-block btn-icon-text"><i class="bi bi-download"></i> <span class="text">Reservation</span></button>
                                            <div class="dropdown">
                                                <button class="btn btn-link p-0 text-muted" type="button" data-bs-toggle="dropdown">
                                                    <i class="bi bi-three-dots-vertical"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    <li><a class="dropdown-item" href="#"><i class="bi bi-pencil"></i> Edit</a></li>
                                                    <li><a class="dropdown-item" href="#"><i class="bi bi-printer"></i> Print</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <table class="table table-borderless">
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <div class="d-flex mb-2 ml-3 text-end">
                                                        <div class="flex-lg-grow-1 ms-3">
                                                            <h5 class=" mb-0"><a href="#" class="text-reset">Pick-Up Location</a></h5>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <i class="fas fa-map-marker-alt text-success" style="font-size:35px"></i>
                                                </td>
                                                <td>
                                                    <div class="d-flex mb-2">

                                                        <div class="flex-lg-grow-1 ms-3 text-center">
                                                            <h5 class="mb-0 text-center"><a href="#" class="text-reset">@Model.PickupLocation</a></h5>
                                                            <span class="text-center text-success">@Model.PreferredPickupDate.Date.ToString("dd MMMM")</span>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <div class="d-flex mb-2 ml-3">
                                                        <div class="flex-lg-grow-1 ms-3">
                                                            <h5 class=" mb-0"><a href="#" class="text-reset">Pick-Up Location</a></h5>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <i class="fas fa-map-marker-alt text-danger" style="font-size:35px"></i>
                                                </td>
                                                <td>
                                                    <div class="d-flex mb-2">
                                                        <div class="flex-lg-grow-1 ms-3 text-center">
                                                            <h5 class="mb-0 text-center"><a href="#" class="text-reset"> @Model.DropOffLocation</a></h5>
                                                            <span class="text-center text-danger">@Model.PreferredDropOffDate.Date.ToString("dd MMMM")</span>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <div class="d-flex mb-2 ml-3">
                                                        <div class="flex-lg-grow-1 ms-3">
                                                            <h5 class="mb-0"><a href="#" class="text-reset">Rented Car</a></h5>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <i class="fas fa-car text-primary" style="font-size:35px"></i>
                                                </td>
                                                <td>
                                                    <div class="d-flex mb-2">
                                                        <div class="flex-lg-grow-1 ms-3 text-center">
                                                            <h5 class="mb-0 text-center"><a href="#" class="text-reset">@Model.CarName</a></h5>
                                                            <span class="text-center">@Model.CarBrand</span>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <div class="d-flex mb-2 ml-3">
                                                        <div class="flex-lg-grow-1 ms-3">
                                                            <h5 class="mb-0"><a href="#" class="text-reset">Total Rental Day</a></h5>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <i class="fas fa-calendar-alt text-primary" style="font-size:35px"></i>
                                                </td>
                                                <td class="h5 text-center">@Model.TotalRentDay Day</td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <div class="d-flex mb-2 ml-3">
                                                        <div class="flex-lg-grow-1 ms-3">
                                                            <h5 class=" mb-0"><a href="#" class="text-reset">Total Amount</a></h5>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <i class="fas fa-money-check-alt text-primary" style="font-size:35px"></i>
                                                </td>
                                                <td class="h5 text-center"><strong>$@Model.TotalCost</strong></td>
                                            </tr>
                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <!-- Customer Notes -->
                            <div class="card mb-4">
                                <div class="card-body">
                                    <h3 class="h6">Additional Comment</h3>
                                    <p>@Model.AdditionalComments</p>
                                </div>
                            </div>
                            <div class="card mb-4">
                                <div class="card-body">
                                    <h3 class="h6">Rental Information</h3>
                                    <strong>User: </strong>
                                    <span>@Model.AppUserName</span>
                                    
                                    @if(Model.Status != CarBookProject.Dto.Enums.ReservationStatus.Completed)
                                    {
                                        <hr>
                                        <form method="post" asp-action="DeleteReservation" asp-controller="Profile">
                                            <input type="hidden" for="id" name="id" value="@Model.ReservationId">
                                            <button class="btn btn-block btn-danger" type="submit" onclick="return confirm('Are you sure you want to delete your Reservation? This action cannot be undone.');">Cancel Reservation</button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
}
else
{
    <section class="ftco-section contact-section my-5">
        <div class="py-5" id="noReservation">
            <div class="container">
                <div class="alert alert-warning" role="alert">
                    <h4 class="alert-heading">Reservation Not Found</h4>
                    <p>No reservation associated was found. The reservation may not have been created or a system error may have occurred.</p>
                    <hr>
                    <p class="mb-0">You will be redirected to the Profile shortly.</p>
                </div>
            </div>
        </div>
    </section>


    <script>
        // Anasayfaya yönlendirme işlemi
        setTimeout(function () {
            window.location.href = "/Profile/Reservations/";
        }, 5000); // 5000 milisaniye sonra yönlendirme yapılır (örneğin 5 saniye)
    </script>
}


<!-- Bootstrap JS ve jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

