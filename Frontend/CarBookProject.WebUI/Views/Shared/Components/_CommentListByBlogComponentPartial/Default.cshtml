@model List<ResultCommentDto>

@if (@ViewBag.CommentCount == 0)
{
    <h3 class="mb-5">This blog post has no comments. Be the first one to comment!</h3>
}
else
{
    <h3 class="mb-5">@ViewBag.CommentCount Comments</h3>
}


<ul class="comment-list">
    @foreach(var item in Model)
    {
        <li class="comment">
            <div class="vcard bio">
                <img src="@item.ImageUrl" alt="@item.Name">
            </div>
            <div class="comment-body">
                <h3>@item.Name</h3>
                <div class="meta">@item.CreatedDate.Date.ToString("MMM. dd, yyyy")</div>
                <p>@item.Description</p>
                <p><a href="#" class="reply">Reply</a></p>
            </div>
        </li>
    }
</ul>
