@model List<ResultFooterAddressDto>

<footer class="ftco-footer ftco-bg-dark ftco-section">
    <div class="container">
        @foreach(var item in Model)
        {
            <div class="row mb-5">
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2"><a href="#" class="logo">Car<span>book</span></a></h2>
                        <p>@item.Description</p>
                        <ul class="ftco-footer-social list-unstyled float-md-left float-lft mt-5">
                            <li class="ftco-animate"><a href="https://twitter.com/home"><span class="icon-twitter"></span></a></li>
                            <li class="ftco-animate"><a href="https://facebook.com"><span class="icon-facebook"></span></a></li>
                            <li class="ftco-animate"><a href="https://instagram.com"><span class="icon-instagram"></span></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4 ml-md-5">
                        <h2 class="ftco-heading-2">Information</h2>
                        <ul class="list-unstyled">
                            <li><a href="/About/Index/" class="py-2 d-block">About</a></li>
                            <li><a href="/Service/Index/" class="py-2 d-block">Services</a></li>
                            <li><a href="/Car/Index/" class="py-2 d-block">Cars</a></li>
                            <li><a href="/Pricing/Index/" class="py-2 d-block">Pricings</a></li>
                            <li><a href="/Blog/Index/" class="py-2 d-block">Blogs</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">Customer Support</h2>
                        <ul class="list-unstyled">
                            <li><a href="/Contact/Index/" class="py-2 d-block">FAQ</a></li>
                            <li><a href="#" class="py-2 d-block" id="paymentOption">Payment Option</a></li>
                            <li><a href="#" class="py-2 d-block" id="bookingTips">Booking Tips</a></li>
                            <li><a href="#" class="py-2 d-block" id="howItWorks">How it works</a></li>
                            <li><a href="#" class="py-2 d-block" id="termsAndConditions">Term and Conditions</a></li>
      
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">Have a Questions?</h2>
                        <div class="block-23 mb-3">
                            <ul>
                                <li><span class="icon icon-map-marker"></span><span class="text">@item.Address</span></li>
                                <li><a href="#"><span class="icon icon-phone"></span><span class="text">@item.Phone</span></a></li>
                                <li><a href="#"><span class="icon icon-envelope"></span><span class="text">@item.Mail</span></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        }
        
        <div class="row">
            <div class="col-md-12 text-center">
                <p>
                    Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved <i class="icon-heart color-danger" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Veysel Emre Yılmaz</a>
                </p>
            </div>
        </div>
    </div>
</footer>

<!-- loader -->
<div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>


<!-- SweetAlert CDN -->
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>
    // Payment Option için SweetAlert
    document.getElementById("paymentOption").addEventListener("click", function (event) {
        event.preventDefault();
        swal("Payment Option", "We accept various payment methods including credit card, PayPal, and bank transfer.", "info");
    });

    // Booking Tips için SweetAlert
    document.getElementById("bookingTips").addEventListener("click", function (event) {
        event.preventDefault();
        swal("Booking Tips", "Here are some tips to make your booking process smoother: 1. Plan ahead, 2. Compare prices, 3. Check for discounts.", "info");
    });

    // How it Works için SweetAlert
    document.getElementById("howItWorks").addEventListener("click", function (event) {
        event.preventDefault();
        swal("How it Works", "This is how it works! You can browse through our available cars, select one, choose your dates, and make a booking.", "info");
    });

    // Term and Conditions için SweetAlert
    document.getElementById("termsAndConditions").addEventListener("click", function (event) {
        event.preventDefault();
        swal("Term and Conditions", "Please read our terms and conditions carefully before proceeding with any bookings.", "info");
    });
</script>