@model ResultBlogDto

<div class="col-md-8 ftco-animate">
    <h2 class="mb-3">@Model.Title</h2>
    <p>@Model.Description</p>
    <p>
        <img src="@Model.CoverImageUrl" alt="" class="img-fluid">
    </p>
    
    @await Component.InvokeAsync("_BlogDetailCloudTagByBlogComponentPartial", new { id = Model.BlogId })
    @await Component.InvokeAsync("_BlogDetailsAuthorAboutComponentPartial", new { id = Model.AuthorId })

    <div class="pt-5 mt-5">
        
        @await Component.InvokeAsync("_CommentListByBlogComponentPartial", new { id = Model.BlogId })
        @await Component.InvokeAsync("_AddCommentComponentPartial")

    </div>
</div>