@model List<ResultAllBlogsWithAuthorDto>

<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Recent Blogs</h4>
            <p class="card-subtitle mb-4 font-size-13">
                Added Last Blogs in This Year
            </p>

            <div class="table-responsive">
                <table class="table table-borderless table-hover table-centered table-nowrap mb-0">
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">
                                        @item.Title
                                    </h5>
                                    <span class="text-muted font-size-12">@item.CreatedDate.Date.ToString("MMM. dd, yyyy")</span>
                                </td>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">@item.CategoryName</h5>
                                    <span class="text-muted font-size-12">Category</span>
                                </td>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">
                                        @item.AuthorName
                                    </h5>
                                    <span class="text-muted font-size-12">Author</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div> 
    </div>
</div>
