@model List<ResultAuthorDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Author List</h4>
                        <p class="card-subtitle mb-4">
                            You can perform transactions related to authors on this page.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th></th>
                                        <th>Description</th>
                                        <th>Delete</th>
                                        <th>Update</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td><img class="rounded-circle" src="@item.ImageUrl" alt="Image" style="max-width: 100px;" /></td>
                                            <td>@item.Name</td>
                                            <td>@item.Description</td>
                                            <td><a href="/Admin/AdminAuthor/RemoveAuthor/@item.AuthorId" class="btn btn-outline-danger">Delete</a></td>
                                            <td><a href="/Admin/AdminAuthor/UpdateAuthor/@item.AuthorId" class="btn btn-outline-success">Update</a></td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <a href="/Admin/AdminAuthor/CreateAuthor/" class="btn btn-outline-primary">Create Author</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


