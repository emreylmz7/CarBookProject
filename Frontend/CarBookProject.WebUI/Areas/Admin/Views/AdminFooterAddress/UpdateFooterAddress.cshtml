@model UpdateFooterAddressDto

@{
    ViewData["Title"] = "UpdateFooterAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Update Footer Address</h4>
                        <p class="card-subtitle mb-4">You must provide all the essential details about the footer address. After completing the data entries, you can finalize the process by clicking the save button.</p>

                        <form method="post">
                            <input type="hidden" asp-for="FooterAddressId">

                            <div class="form-group">
                                <label for="Description">Description</label>
                                <textarea class="form-control" id="Description" asp-for="Description" placeholder="Enter Description"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="Address">Address</label>
                                <input type="text" class="form-control" id="Address" asp-for="Address" placeholder="Enter Address">
                            </div>
                            <div class="form-group">
                                <label for="Phone">Phone</label>
                                <input type="text" class="form-control" id="Phone" asp-for="Phone" placeholder="Enter Phone">
                            </div>
                            <div class="form-group">
                                <label for="Mail">Mail</label>
                                <input type="text" class="form-control" id="Mail" asp-for="Mail" placeholder="Enter Mail">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Update</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
