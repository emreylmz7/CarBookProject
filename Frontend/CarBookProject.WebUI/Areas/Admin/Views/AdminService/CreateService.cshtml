@model CreateServiceDto

@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Create New Service</h4>
                        <p class="card-subtitle mb-4">You must provide all the essential details about the Service. After completing the data entries, you can finalize the process by clicking the save button.</p>

                        <form method="post">
                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <input type="text" asp-for="Title" class="form-control" placeholder="Enter Title">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <textarea asp-for="Description" class="form-control" placeholder="Enter Description"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="IconUrl">Icon URL</label>
                                <input type="text" asp-for="IconUrl" class="form-control" placeholder="Enter Icon URL">
                                <span asp-validation-for="IconUrl" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Create</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
