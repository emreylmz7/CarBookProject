@model List<ResultContactDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Inbox </h4>
                <p class="card-subtitle mb-4">
                    Inbox is a used to view and manage incoming emails.
                </p>

                <table id="basic-datatable" class="table dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Subject</th>
                            <th>Message</th>
                            <th>Delete</th>
                            <th>SendDate</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach(var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.Subject</td>
                                <td>@item.Message</td>
                                <td><a href="/Admin/AdminContact/RemoveContact/@item.ContactId" class="btn btn-outline-danger">Delete</a></td>
                                <td>@item.SendDate</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div> 
        </div> 
    </div>
</div>


